# KitchenRadio Environment Configuration
# This file configures environment variables for the KitchenRadio project

# ===== PYTHON PATH CONFIGURATION =====
# Path to the source directory (relative to project root)
KITCHENRADIO_SRC_PATH=src

# Alternative: Absolute path (uncomment and modify if needed)
# KITCHENRADIO_SRC_PATH=/absolute/path/to/your/project/src

# Add to PYTHONPATH for automatic module discovery
# On Windows
PYTHONPATH=%PYTHONPATH%;%CD%\src

# On Linux/Mac (uncomment the line below instead)
# PYTHONPATH=${PYTHONPATH}:$(pwd)/src

# ===== MPD CONNECTION DEFAULTS =====
# Default MPD server settings
MPD_HOST=192.168.1.4
MPD_PORT=6600
MPD_PASSWORD=

# Connection timeout (seconds)
MPD_TIMEOUT=10

# ===== APPLICATION SETTINGS =====
# Default volume level
DEFAULT_VOLUME=50

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# ===== DEVELOPMENT SETTINGS =====
# Enable development mode features
DEV_MODE=true

# Auto-reload on file changes
AUTO_RELOAD=false
